<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity"
    android:background="#D7B306">


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:background="@color/white"
        android:backgroundTint="#ffe4c4">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/main_logo"
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:layout_marginLeft="170dp"
            android:src="@drawable/cogi_love"
            app:civ_border_color="#D7B306"
            app:civ_border_width="3dp" />


    </com.google.android.material.appbar.AppBarLayout>

    <ImageView
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:src="@drawable/welcome_honeydog"
        android:layout_below="@id/appbar_title"
        android:layout_marginTop="35dp"
        android:layout_alignParentRight="true"
        android:visibility="visible"
        android:padding="1dp"/>


    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/appbar_title">



        <com.google.android.material.navigation.NavigationView
            android:id="@+id/nav"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            app:headerLayout="@layout/dr_main"
            app:menu="@menu/menu_item"/>




    </androidx.drawerlayout.widget.DrawerLayout>


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar_middle"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="#D7B306"
        android:layout_below="@id/appbar_title"
        android:layout_marginTop="80dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/main_dog_cmm"
            android:layout_width="75dp"
            android:layout_height="60dp"
            android:src="@drawable/cogi_love"
            app:civ_border_width="1dp"
            app:civ_border_color="#D7B306"
            android:layout_marginTop="8dp"
            android:layout_above="@id/main_cat_cmt"
            android:layout_alignLeft="@id/main_cat_cmt"
           android:layout_marginBottom="15dp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/main_cat_cmt"
                android:layout_width="75dp"
                android:layout_height="60dp"
                android:src="@drawable/cogi_love"
                app:civ_border_color="#D7B306"
                app:civ_border_width="1dp"
                android:layout_marginTop="8dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="100dp"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/main_seting"
            android:layout_width="75dp"
            android:layout_height="60dp"
            android:src="@drawable/cogi_love"
            app:civ_border_width="1dp"
            app:civ_border_color="#D7B306"
            android:layout_toRightOf="@id/main_dog_cmm"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="60dp"
            android:layout_marginBottom="10dp"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/main_search"
                android:layout_width="75dp"
                android:layout_height="60dp"
                android:src="@drawable/cogi_love"
                app:civ_border_width="1dp"
                app:civ_border_color="#D7B306"
                android:layout_above="@id/main_seting"
                android:layout_toRightOf="@id/main_dog_cmm"
                android:layout_marginBottom="22dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="60dp" />

        </RelativeLayout>

    </com.google.android.material.appbar.AppBarLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">




    </androidx.cardview.widget.CardView>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginBottom="1dp"
        android:background="@color/white"
        android:clickable="true"
        app:menu="@menu/menu_bottom_navigation">




    </com.google.android.material.bottomnavigation.BottomNavigationView>




</RelativeLayout>