<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:clickable="true"
    app:contentPadding="8dp">

    <RelativeLayout
        android:id="@+id/community_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#84de3caf"
        android:clickable="true">

        <ImageView
            android:id="@+id/community_list_iv"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:src="@drawable/cat_community" />

        <TextView
            android:id="@+id/community_list_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/community_list_iv"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="게시글 작성 리스트 화면 테스트를 위해서 작성된 텍스트 입니다" />

        <TextView
            android:id="@+id/community_list_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/community_list_iv"
            android:fontFamily="@font/kotra_hope"
            android:text="닉네임"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:visibility="invisible" />


    </RelativeLayout>


</androidx.cardview.widget.CardView>