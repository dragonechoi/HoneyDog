<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D7B306"
    tools:context=".activities.LoginActivity">


    <ImageView
        android:id="@+id/civ_intro"
        android:layout_width="200dp"
        android:layout_height="180dp"
        android:layout_marginLeft="98dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/cogi_love" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layout_id"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="312dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/civ_intro"
        android:layout_marginLeft="50dp"
        android:hint="ID"
        android:maxEms="20"
        android:minEms="8"
        app:counterEnabled="true"
        app:counterMaxLength="20"
        app:endIconMode="clear_text"
        app:helperText="ID 입력">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:maxLines="1" />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layout_pw"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="312dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_id"
        android:layout_alignLeft="@id/layout_id"
        android:hint="pw"
        android:maxEms="20"
        android:minEms="8"
        app:counterEnabled="false"
        app:counterMaxLength="20"
        app:endIconMode="password_toggle"
        app:helperText="페스워드 입력">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_pw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:maxLines="1" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_pw"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/black"
        android:fontFamily="@font/kotra_hope"
        android:text="로그인"
        android:textSize="25sp" />


    <TextView
        android:id="@+id/miss_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_login"
        android:layout_alignLeft="@id/btn_login"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/kotra_hope"
        android:text="아이디 찾기" />

    <TextView
        android:id="@+id/miss_pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_login"
        android:layout_alignRight="@id/btn_login"
        android:layout_marginTop="8dp"
        android:layout_marginRight="24dp"
        android:fontFamily="@font/kotra_hope"
        android:text="비밀번호 찾기" />

    <TextView
        android:id="@+id/new_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/miss_id"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/kotra_hope"
        android:padding="8dp"
        android:text="회원가입"
        android:textSize="15dp" />


    <TextView
        android:id="@+id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="70dp"
        android:layout_marginBottom="45dp"
        android:fontFamily="@font/kotra_hope"
        android:text="멍냥 멍냥 - 반려동물 지식 정보 제공 커뮤니티"
        android:textColor="@color/black"
        android:textSize="20dp" />


</RelativeLayout>